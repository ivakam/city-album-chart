<% title "Forum" %>
<div id="main-container">
    <%= render 'partials/navbar_slim' %>
    <%= image_tag "spinner.gif", class: "spinner hidden" %>
    <div id="board-container">
        <div id="main-opacity"></div>
        <h2 id="title">Forum</h2>
        <div id="board-list" class="forum-margin">
            <ul>
                <li>
                    <div id="forum-opacity"></div>
                    <a href="<%= forum_path + '/announcements' %>"><ion-icon name="ios-arrow-dropright-circle"></ion-icon></a>
                    <div class="board-title-container">
                        <h3><a href="<%= forum_path + '/announcements' %>">Announcements</a></h3>
                        <p>Important announcements and PSAs.</p>
                    </div>
                    <div class="activity"><p>Last updated by <%= board_last_updated('announcements').user.username %> in thread "<%= board_last_updated('announcements').title %>" <br> at <%= board_last_updated('announcements').updated_at.strftime("%R %Z, %F") %></p></div>
                </li>
                <li>
                    <a href="<%= forum_path + '/rules' %>"><ion-icon name="ios-arrow-dropright-circle"></ion-icon></a>
                    <div class="board-title-container">
                        <h3><a href="<%= forum_path + '/rules' %>">Rules and guidelines</a></h3>
                        <p>Please read these before posting.</p>
                    </div>
                    <div class="activity"><p>Last updated by <%= board_last_updated('rules').user.username %> in thread "<%= board_last_updated('rules').title %>" <br> at <%= board_last_updated('rules').updated_at.strftime("%R %Z, %F") %></p></div>
                </li>
            </ul>
            <div class="divider"></div>
            <ul>
                <li>
                    <div id="forum-opacity"></div>
                    <a href="<%= forum_path + '/general' %>"><ion-icon name="ios-arrow-dropright-circle"></ion-icon></a>
