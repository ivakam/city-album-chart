<div id="wrapper">
	<img alt="" class="bigimage" src="">
	<div id="opaque"></div>
	<div id="search-title">
  	<a href=""><h1>City Pop Album Archive</h1></a>
  	<div id="input">
  		<img alt="" id="regex" class="gray" src="https://upload.wikimedia.org/wikipedia/commons/6/63/OOjs_UI_icon_regular-expression-progressive.svg">
  		<input type="text" id="main-search" name="search" placeholder=" Search for an artist, album, flavor... (Click the button on the left to enable regex matching.)"><span class="ion-android-search"></span>
  	</div>
	</div>
  <div id="main-container">
    <nav id="sidebar">
      <h2>Navigation & Filters</h2>
      <ul class="nav-list">
        <li class="nav-btn"><div class="title-wrapper"><%= link_to "Home", albums_index_path %></div></li>
        <li class="nav-btn" id="filters">
        	<div class="title-wrapper">
        		<a class="btn-title">Filters:</a>
        	</div>
        	<div class="nav-list-container">
        		<ul id="sort-list">
        			<li class="sort-btn"><a>Title</a><span class="ion-chevron-down"></span></li>
        			<li class="sort-btn"><a>Artist</a><span class="ion-chevron-down"></span></li>
        			<li class="sort-btn"><a>Year</a><span class="ion-chevron-down"></span></li>
        			<li class="sort-btn"><a>Flavor</a><span class="ion-chevron-down"></span></li>
        		</ul>
        	</div>
        </li>
        <li class="nav-btn" id="random"><div class="title-wrapper"><a class="btn-title">Random</a></div></li>
        <li class="nav-btn"><div class="title-wrapper"><%= link_to "About", about_index_path %></div></li>
      </ul>
    </nav>
 		<ul id="splash-container">
    	<% @albums.each.with_index do |album, index| %>
    	<li>
      	<div class="album-container" id="<%= index %>">
        	<div class="album-text-container">
        		<div class="text-size-wrapper">
          		<h2><%= album.title %></h2>
        		</div>
          	<%= image_tag album.coverlink %>
          	<div class="artist-year-container">
          		<p class="artist"><%= album.romaji_artist %></p>
          		<p class="year"><%= album.year %></p>
        		</div>
        	</div>
        	<div class="arrow-container"><span class="ion-chevron-down album-arrow"></span></div>
      	</div>
      	<div class="info-container offset" id="<%= index %>-info">
      	<div class="info-wrapper">
      		<div class="info-background"><%= image_tag album.coverlink %></div>
      		<div class="info-text-container">
      			<div class="text-container">
      			<div class="title-container">
        				<h2><%= album.title %></h2>
          		<h3><i><%= album.romanization %></i></h3>
          	</div>
         		<div class="artist-container">
          		<p class="label">Artist:</p>
        			<p><%= album.romaji_artist %></p>
        			<p class="label"><%= album.japanese_artist %></p>
        		</div>
        		<div class="release-date">
        			<p class="label">Release date:</p>
        			<p><%= album.year %></p>
        		</div>
        		<div class="flavor">
        			<p class="label">Flavor:</p>
        			<p><%= album.flavor %></p>
        		</div>
        		<div class="description-container">
        			<p class="label">Description:</p>
       				<p class="description"><%= album.description %></p>
        		</div>
        	</div>
  		      <ul class="tracklist-container">
    		    	<li><h3>Tracklist:</h3></li>
    		    	<% album.tracks.each.with_index do |track, index| %>
       			 		<li>
        						<div class="track-title-container">
        						<p><%= index+1 %>. &nbsp</p>
        						<p><%= track.title %></p>
        						<i><%= track.romanization %></i>
        					</div>
        					<p><%= track.duration %></p>
        				</li>
        			<% end %>
      			</ul>
      	</div>
      	<%= image_tag album.coverlink %>
        </div>
      	</div>
      </li>
    	<% end %>
  	</ul>
	</div>
	<div id="footer">
		<ul id="link-list">
			<li><a href="https://github.com/ivakam/city-album-chart">Github</a></li>
			<li><a href="mailto:ivar.kamsvag@gmail.com">Email</a></li>
			<li><a href="https://discord.gg/AhSJCB">City pop Discord server</a></li>
