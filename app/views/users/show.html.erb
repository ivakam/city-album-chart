<% title "Submit" %>
<% description "varieti.es is an open source archive for city pop. Browse your favorite city pop albums in an accessible way!" %>
<%= image_tag "varietiescropped.png", id: "alt-img" %>
<div id="bg-opacity"></div>
<div id="albums-bg-container">
	<%= image_tag "aninsatiablehigh.jpg" %>
	<%= image_tag "flapper.jpg" %>
	<%= image_tag "firstlight.jpg" %>
	<%= image_tag "foryou.jpg" %>
	<%= image_tag "流線形80.jpg" %>
</div>
<div id="search-title">
    <div id="logo-title">
        <a href="/albums/index"><h1>varieti.es</h1></a>
        <a href="/albums/index" id="beta-title">BETA!</a>
        <h2>City Pop Album Archive</h2>
    </div>
    <div id="input">
</div>
</div>
<div id="main-container">
    <div id="main-opacity"></div>
    <nav id="sidebar">
        <ul id="nav-list">
            <li>
                <div class="nav-btn"><div class="title-wrapper"><%= link_to "Home", albums_path %></div></div>
                <div class="nav-btn"><div class="title-wrapper"><%= link_to "Submit", albums_submit_path %></div></div>
                <div class="nav-btn"><div class="title-wrapper"><%= link_to "About / FAQ", about_path %></div></div>
            </li>
        </ul>
    </nav>
    <div id="profile-wrapper">
        <div id="profile-header">
            <div>
                <form id="avatar-form" enctype="multipart/form-data" action="<%= root_url + '/users/update' %>" method="post" data-remote="false">
                    <label for="avatar">
                        <% if @user.avatar.attached? %>
                            <%= image_tag @user.avatar.variant(resize: "200x200") %>
                        <% else %>
                        <img src="https://i.imgur.com/ceYNiDi.png"></img>
                        <% end %>
                    </label>
                    <input id="avatar" name="user[avatar]" type="file">
                    <input type="text" name="user[id]" value="<%= @user.id %>" hidden>
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                    <div><p><b>Change avatar</b></p></div>
                </form>
                <h2><%= @user.username %></h2>
            </div>
            <div class="profile-info-container">
                <div>
                    <p><b>Birth year: </b></p>
                    <p><%= @user.birth_year %></p>
                </div>
                <div>
                    <p><b>Gender: </b></p>
                    <p><%= @user.gender %></p>
                </div>
            </div>
            <div class="profile-info-container">
                <div>
                    <p><b>Location: </b></p>
                    <p>
                        <% if @user.location.present? %>
                        <%= @user.location %>
                        <% else %>
                        Unknown location
                        <% end %>
                    </p>
                </div>
                <div>
                    <p><b>Bio: </b></p>
                    <p>
                        <% if @user.bio.present? %>
                        <%= @user.bio %>
                        <% else %>
                        No bio provided
                        <% end %>
                    </p>
                </div>
            </div>
        </div>
        <div id="favorites-display">
            
        </div>
	</div>
</div>